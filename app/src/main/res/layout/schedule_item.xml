<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:paddingLeft="5dp"
        android:text="Mock Class Name"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/course_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Mock Class Time"
            android:layout_weight="2"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" - "
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/course_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Mock End Time"
            android:layout_weight="2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/course_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:paddingLeft="5dp"
        android:text="test"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/monday_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tuesday_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/its_wednesday_my_dudes_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/thursday_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Th"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/friday_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- TODO this view is a hacky way of doing this, replace with item decoration -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333"/>
    
</LinearLayout>